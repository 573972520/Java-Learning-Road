
public class 递归方法Test4
{

	public static void main(String[] args)
	{
		// TODO Auto-generated method stub
		//		story();
		jiecheng(5);
	}

	//讲故事的方法
	public static void story()
	{
		System.out.println("从前有个庙，庙里面有一个老和尚，老和尚在和小和尚讲故事，讲的故事是：");
		story();
	}

	public static int jiecheng(int n)
	{
		if (n > 0)
		{
			return n = n * (n - 1);
		} else if (n == 0)
		{
			return 1;
		}
		return jiecheng(n - 1);
	}


}
