package 多线程编程;

public class SleepTest1
{

	public static void main(String[] args)
	{
		// TODO Auto-generated method stub
		System.out.println("倒计时开始");
		for (int i = 10; i > 0; i--)
		{
			try
			{
				Thread.sleep(1000);
				System.out.println(i);
			} catch (InterruptedException e)
			{
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		}
	}

}
